
{
  "version": 2,
  "outputDirectory": ".",
  "buildCommand": "cd sleepflight && npm install && npm run build && cd ..",
  "headers": [
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        },
        {
          "key": "Content-Type",
          "value": "application/json"
        }
      ]
    },
    {
      "source": "/sleepflight/(.*\\.tsx)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    },
    {
      "source": "/sleepflight/(.*\\.ts)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/config",
      "destination": "/api/config"
    },
    {
      "source": "/api/find-city-geonames",
      "destination": "/api/find-city-geonames"
    },
    {
      "source": "/api/translate-location",
      "destination": "/api/translate-location"
    },
    {
      "source": "/api/generateStory",
      "destination": "/api/generateStory"
    },
    {
      "source": "/api/generatePiStory",
      "destination": "/api/generatePiStory"
    },
    {
      "source": "/api/save-record",
      "destination": "/api/save-record"
    },
    {
      "source": "/api/get-flight-data",
      "destination": "/api/get-flight-data"
    },
    {
      "source": "/sleepflight",
      "destination": "/sleepflight/dist/index.html"
    },
    {
      "source": "/sleepflight/assets/(.*)",
      "destination": "/sleepflight/dist/assets/$1"
    },
    {
      "source": "/sleepflight/(.*)",
      "destination": "/sleepflight/dist/$1"
    }
  ]
} 
